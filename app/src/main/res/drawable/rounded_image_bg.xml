<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Add a drop shadow using a shape with a solid color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- Add padding to create space for the drop shadow -->
    <item android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
        <!-- Create the rounded edges using a shape with a transparent solid color -->
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="5dp" />
            <stroke android:color="#FF000000" android:width="1dp" />
        </shape>
    </item>
</layer-list>
